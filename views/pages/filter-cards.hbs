<div class="jumbotron jt-filter tc pt-3">
	<h1>{{header}}</h1>
	<div class="row">
		<form action="/movies/filter" method="POST" class="form-filter">
			<div class="form-check">
				{{#each genres}}
					<div class="col-xs-6 col-sm-3">
						<label class="genre-title">
							<input class="genre-box" name="{{this}}" type="checkbox">{{this}}
						</label>
					</div>
				{{/each}}
			</div>
			<button class="btn-filter">
				<svg xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 512 512"><path d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"/></svg>
			</button>
		</form>
	</div>
</div>

<div class="wrapper">
	{{#each results}}
		<div class="movie-card">
			<img class="movie-card__image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}">
			<div class="movie-card__content">
				<div class="movie-card__content__info">
					<div class="movie-card__content__favs">{{favs}}</div>
					<h4 class="movie-card__content__info__title">{{title}} 
						<small><a href="/year/{{year}}">{{year}}</a></small>
					</h4>
					<p class="movie-card__content__info__genres">
						{{#each genres}}
							<a href="/genre/{{this}}">{{this}}</a>
						{{/each}}
					</p>
					<p class="movie-card__content__info__cast">{{cast}}</p>
					<p class="movie-card__content__info__description d-none d-sm-block">{{plot}}</p>
					<p class="movie-card__content__info__expand"><span>👇</span> expand to see more</p>
				</div>
				<div class="movie-card__content__btn-group">
					<button type="button" data-id="{{id}}" class="btn btn-expand btn-primary">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="#fff" style="vertical-align: sub"><path d="M240.971 130.524l194.343 194.343c9.373 9.373 9.373 24.569 0 33.941l-22.667 22.667c-9.357 9.357-24.522 9.375-33.901.04L224 227.495 69.255 381.516c-9.379 9.335-24.544 9.317-33.901-.04l-22.667-22.667c-9.373-9.373-9.373-24.569 0-33.941L207.03 130.525c9.372-9.373 24.568-9.373 33.941-.001z"/></svg>
					</button>
					<button type="submit" data-id="{{id}}" class="btn btn-add2fav btn-success">
						Add as favorite ⭐
					</button>
				</div>
			</div>
		</div>
	{{/each}}
</div>
