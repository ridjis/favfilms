<div class="jumbotron text-center" style="padding-top: 25px">
	<h2>{{header}}</h2>
	<div class="container">
		<div class="row">
			<form action="/movies/filter" method="POST">
				<div class="form-check">
					{{#each genres}}
						<div class="col-xs-6 col-sm-3">
							<label class="genre-title">
								<input class="genre-box" name="{{this}}" type="checkbox">{{this}}
							</label>
						</div>
					{{/each}}
				</div>
				<button id="btn-filter"><i class="fa fa-search"></i></button>
			</form>
		</div>
	</div>
</div>

<div class="wrapper">
	{{#each results}}
		<div class="card-land">
			<img src="https://image.tmdb.org/t/p/w500{{poster_path}}" class="card-img-left" alt="{{title}}">
			<div class="card-land-block">
				<div class="card-land-favs">{{favs}}</div>
				<h4 class="card-land-title">{{title}} <small>{{year}}</small></h4>
				<p class="card-land-genres">
					{{#each genres}}
						<a href="/genre/{{this}}">{{this}}</a>
					{{/each}}
				</p>
				<p class="card-land-cast">{{cast}}</p>
				<p class="card-land-text">{{plot}}</p>
			</div>
			<a href="#" class="btn-expand btn-primary"><i class="fa fa-expand"></i></a>
			<button type="submit" data-id="{{id}}" class="btn-add2fav btn-success">Add as favourite</button>
		</div>
	{{/each}}
</div>