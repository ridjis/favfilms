<div class="jumbotron text-center popular">
	<h1>{{header}}</h1>
</div>

<div class="wrapper">
	{{#each results}}
		<div class="movie-card">
			<img class="movie-card__image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}">
			<div class="movie-card__content">
				<div class="movie-card__content__info">
					<div class="movie-card__content__favs">{{favs}}</div>
					<h4 class="movie-card__content__info__title">{{title}} 
						<small><a href="/year/{{year}}">{{year}}</a></small>
					</h4>
					<p class="movie-card__content__info__genres">
						{{#each genres}}
							<a href="/genre/{{this}}">{{this}}</a>
						{{/each}}
					</p>
					<p class="movie-card__content__info__cast">{{cast}}</p>
					<p class="movie-card__content__info__description">{{plot}}</p>
					<p class="movie-card__content__info__expand"><span>ðŸ‘‡</span> expand to see more</p>
				</div>
				<div class="movie-card__content__btn-group">
					<button type="button" data-id="{{id}}" class="btn btn-expand btn-primary">
						<i class="fa fa-expand"></i>
					</button>
					<button type="submit" data-id="{{id}}" class="btn btn-add2fav btn-success">
						Add as favourite
					</button>
				</div>
			</div>
		</div>
	{{/each}}
</div>
<div class="overlay">
	<div class="modal-movie">
		<div class="img-left">
			<img class="poster" src="" alt="">
			<button type="submit" class="btn-fav btn-success">Add as favourite</button>
		</div>
		<div class="details-block">
			<div class="favs"></div>
			<h2 class="title"><small class="year"></small></h2>
			<p class="genres"></p>
			<p class="cast"></p>
			<p class="plot"></p>
		</div>
		<span class="close-btn">&times;</span>
	</div>
</div>