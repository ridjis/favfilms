<div class="jumbotron text-center popular">
	<h1>{{header}}</h1>
</div>

<div class="wrapper">
	{{#each results}}
		<div class="card-land">
			<img src="https://image.tmdb.org/t/p/w500{{poster_path}}" class="card-img-left" alt="{{title}}">
			<div class="card-land-block">
				<div class="card-land-favs">{{favs}}</div>
				<h4 class="card-land-title">{{title}} 
					<small><a href="/year/{{year}}">{{year}}</a></small>
				</h4>
				<p class="card-land-genres">
					{{#each genres}}
						<a href="/genre/{{this}}">{{this}}</a>
					{{/each}}
				</p>
				<p class="card-land-cast">{{cast}}</p>
				<p class="card-land-text">{{plot}}</p>
			</div>
			<button type="button" data-id="{{id}}" class="btn-expand btn-primary">
				<i class="fa fa-expand"></i>
			</button>
			<button type="submit" data-id="{{id}}" class="btn-add2fav btn-success">Add as favourite</button>
		</div>
	{{/each}}
</div>
<div class="overlay">
	<div class="modal-movie">
		<div class="img-left">
			<img class="poster" src="" alt="">
			<button type="submit" class="btn-fav btn-success">Add as favourite</button>
		</div>
		<div class="details-block">
			<div class="favs"></div>
			<h2 class="title"><small class="year"></small></h2>
			<p class="genres"></p>
			<p class="cast"></p>
			<p class="plot"></p>
		</div>
		<span class="close-btn">&times;</span>
	</div>
</div>